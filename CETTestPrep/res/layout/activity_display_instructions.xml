<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DisplayInstructionsActivity" >

        <TextView
            android:id="@+id/label_instructions1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_instructions"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/label_instructions2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INSTRUCTIONS WILL BE DISPLAYED HERE"
            android:layout_below="@+id/label_instructions1"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/label_timedetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Timed"
            android:layout_below="@+id/label_instructions2"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/label_timed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIMER DETAILS TO BE DISPLAYED HERE"
            android:layout_below="@+id/label_timedetails"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/button_newTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_timedetails"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="92dp"
            android:onClick="viewQuestions"
            android:text="@string/new_test" />

</RelativeLayout>